<h1>Create a New Figure</h1>

<form method="POST" action="/figures">

<label>Name</label> <input name="figure[name]" id="figure_name" type="text"><br><br>

<h3>Titles</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"> <%= title.name %></input><br>
    <% end %>

<h3>Create New Title</h3>
    <input type="text" name="title[name]" id="new_title"></input><br><br>

<h3>Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
    <% end %>

<h3>Create New Landmark</h3><br><br>
    <label>Name: </label><input type="text" name="landmark[name]" id="new_landmark"></input><br>
    <label>Year: </label> <input type="text" name="landmark[year_completed]" id="landmark_year"></input><br><br>

<input value="Create New Figure" type="submit">











</form>